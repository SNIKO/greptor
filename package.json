{
	"name": "greptor",
	"version": "0.6.0",
	"type": "module",
	"description": "Transform messy, unstructured text into clean, grep-friendly data for agentic search workflows.",
	"license": "MIT",
	"author": "Sergii Vashchyshchuk",
	"repository": {
		"type": "git",
		"url": "git+https://github.com/sniko/greptor.git"
	},
	"keywords": ["grep", "search", "ingestion", "llm", "rag", "markdown", "yaml"],
	"main": "./dist/index.js",
	"bin": {
		"greptor": "./dist/cli/app.js"
	},
	"sideEffects": false,
	"files": ["dist", "README.md", "LICENSE"],
	"exports": {
		".": {
			"types": "./dist/index.d.ts",
			"import": "./dist/index.js",
			"default": "./dist/index.js"
		},
		"./package.json": "./package.json"
	},
	"types": "./dist/index.d.ts",
	"scripts": {
		"dev": "bun run --watch src/cli/app.ts",
		"build": "rm -rf dist && bun node_modules/typescript/bin/tsc",
		"prepublishOnly": "npm run build",
		"demo": "bun run scripts/test.ts",
		"typecheck": "tsc --noEmit -p tsconfig.json",
		"lint": "biome check .",
		"fix": "biome format --write",
		"changeset": "bunx changeset",
		"version": "bunx changeset version"
	},
	"engines": {
		"node": ">=18.0.0",
		"bun": ">=1.0.0"
	},
	"devDependencies": {
		"@biomejs/biome": "^1.9.3",
		"@changesets/cli": "^2.29.8",
		"@types/bun": "latest",
		"@types/node": "^22.10.2",
		"typescript": "^5.6.3"
	},
	"dependencies": {
		"@ai-sdk/amazon-bedrock": "3.0.57",
		"@ai-sdk/anthropic": "2.0.56",
		"@ai-sdk/azure": "2.0.82",
		"@ai-sdk/cerebras": "1.0.33",
		"@ai-sdk/cohere": "2.0.21",
		"@ai-sdk/deepinfra": "1.0.30",
		"@ai-sdk/gateway": "2.0.23",
		"@ai-sdk/google": "2.0.49",
		"@ai-sdk/google-vertex": "3.0.81",
		"@ai-sdk/groq": "2.0.33",
		"@ai-sdk/mistral": "2.0.26",
		"@ai-sdk/openai": "2.0.71",
		"@ai-sdk/openai-compatible": "^2.0.2",
		"@ai-sdk/perplexity": "2.0.22",
		"@ai-sdk/provider": "2.0.0",
		"@ai-sdk/provider-utils": "3.0.19",
		"@ai-sdk/togetherai": "1.0.30",
		"@ai-sdk/vercel": "1.0.31",
		"@ai-sdk/xai": "2.0.42",
		"@clack/prompts": "1.0.0-alpha.1",
		"@stricli/core": "^1.2.5",
		"ai": "^6.0.6",
		"yaml": "^2.8.2",
		"zod": "^4.1.12"
	}
}
