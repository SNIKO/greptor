{
	"name": "greptor",
	"version": "0.4.0",
	"type": "module",
	"description": "Transform messy, unstructured text into clean, grep-friendly data for agentic search workflows.",
	"license": "MIT",
	"author": "Sergii Vashchyshchuk",
	"repository": {
		"type": "git",
		"url": "git+https://github.com/sniko/greptor.git"
	},
	"keywords": [
		"grep",
		"search",
		"ingestion",
		"llm",
		"rag",
		"markdown",
		"yaml"
	],
	"main": "./dist/index.js",
	"sideEffects": false,
	"files": [
		"dist",
		"README.md",
		"LICENSE"
	],
	"exports": {
		".": {
			"types": "./dist/index.d.ts",
			"import": "./dist/index.js",
			"default": "./dist/index.js"
		},
		"./package.json": "./package.json"
	},
	"types": "./dist/index.d.ts",
	"scripts": {
		"build": "rm -rf dist && tsc",
		"prepublishOnly": "npm run build",
		"demo": "bun run scripts/test.ts",
		"typecheck": "tsc --noEmit -p tsconfig.json",
		"lint": "biome check .",
		"fix": "biome format --write",
		"changeset": "bunx changeset",
		"version": "bunx changeset version"
	},
	"engines": {
		"node": ">=18.0.0",
		"bun": ">=1.0.0"
	},
	"devDependencies": {
		"@biomejs/biome": "^1.9.3",
		"@changesets/cli": "^2.29.8",
		"@types/bun": "latest",
		"@types/node": "^22.10.2",
		"typescript": "^5.6.3"
	},
	"dependencies": {
		"@ai-sdk/openai-compatible": "^2.0.2",
		"ai": "^6.0.6",
		"yaml": "^2.8.2",
		"zod": "^4.1.12"
	}
}
