{
	"name": "greptor",
	"version": "0.1.0",
	"type": "module",
	"description": "A high-performance content ingestion and indexing library designed to make unstructured data easily searchable with grep tools.",
	"license": "MIT",
	"author": "Niko",
	"repository": {
		"type": "git",
		"url": "git+https://github.com/niko/greptor.git"
	},
	"keywords": ["grep", "search", "ingestion", "llm", "rag", "markdown", "yaml"],
	"main": "./dist/index.js",
	"sideEffects": false,
	"files": ["dist", "README.md", "LICENSE"],
	"exports": {
		".": {
			"types": "./dist/index.d.ts",
			"import": "./dist/index.js",
			"default": "./dist/index.js"
		},
		"./package.json": "./package.json"
	},
	"types": "./dist/index.d.ts",
	"scripts": {
		"build": "rm -rf dist && tsc",
		"prepublishOnly": "npm run build",
		"demo": "bun run scripts/test.ts",
		"typecheck": "tsc --noEmit -p tsconfig.json",
		"lint": "biome check .",
		"fix": "biome format --write"
	},
	"engines": {
		"node": ">=18.0.0",
		"bun": ">=1.0.0"
	},
	"devDependencies": {
		"@biomejs/biome": "^1.9.3",
		"@types/bun": "latest",
		"@types/node": "^22.10.2",
		"typescript": "^5.6.3"
	},
	"dependencies": {
		"openai": "^6.8.1",
		"yaml": "^2.8.2",
		"zod": "^4.1.12"
	}
}
