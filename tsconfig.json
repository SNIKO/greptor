{
	"compilerOptions": {
		"target": "ES2022",
		"lib": ["ES2022"],

		"module": "NodeNext",
		"moduleResolution": "NodeNext",

		"rootDir": "src",
		"outDir": "dist",

		"declaration": true,
		"declarationMap": true,
		"sourceMap": true,

		"strict": true,
		"exactOptionalPropertyTypes": true,
		"noUncheckedIndexedAccess": true,
		"useUnknownInCatchVariables": true,
		"noImplicitOverride": true,
		"skipLibCheck": true,

		"types": ["node"]
	},
	"include": ["src/**/*.ts"]
}
